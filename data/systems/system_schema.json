{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "System Definition Schema",
  "type": "object",
  "required": [
    "system_id",
    "star"
  ],
  "properties": {
    "system_id": {
      "type": "string"
    },
    "display_name": {
      "type": "string"
    },
    "seed": {
      "type": "integer"
    },
    "star": {
      "type": "object",
      "required": [
        "scene",
        "type",
        "radius"
      ],
      "properties": {
        "scene": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "radius": {
          "type": "number"
        },
        "color": {
          "type": "string"
        },
        "light_intensity": {
          "type": "number"
        },
        "position": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "planets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "scene",
          "type"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "scene": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "texture": {
            "type": "string"
          },
          "orbit": {
            "type": "object",
            "properties": {
              "radius": {
                "type": "number"
              },
              "angle": {
                "type": "number"
              },
              "speed": {
                "type": "number"
              },
              "target": {
                "type": "string"
              }
            }
          },
          "moons": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id",
                "scene"
              ],
              "properties": {
                "id": {
                  "type": "string"
                },
                "scene": {
                  "type": "string"
                },
                "texture": {
                  "type": "string"
                },
                "orbit": {
                  "type": "object",
                  "properties": {
                    "radius": {
                      "type": "number"
                    },
                    "angle": {
                      "type": "number"
                    },
                    "speed": {
                      "type": "number"
                    },
                    "target": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "asteroid_belts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "scene"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "scene": {
            "type": "string"
          },
          "radius": {
            "type": "number"
          },
          "width": {
            "type": "number"
          },
          "density": {
            "type": "number"
          },
          "archetype": {
            "type": "string"
          },
          "visual_set": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            ]
          },
          "hazards": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "center_offset": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 2,
            "maxItems": 2
          },
          "seed": {
            "type": "integer"
          }
        }
      }
    },
    "stations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "scene",
          "faction"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "scene": {
            "type": "string"
          },
          "faction": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "sprite": {
            "type": "string"
          },
          "orbit": {
            "type": "object",
            "properties": {
              "radius": {
                "type": "number"
              },
              "angle": {
                "type": "number"
              },
              "speed": {
                "type": "number"
              },
              "target": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "npc_ships": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "scene",
          "faction",
          "role"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "scene": {
            "type": "string"
          },
          "faction": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "sprite": {
            "type": "string"
          },
          "position": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 2,
            "maxItems": 2
          }
        }
      }
    }
  }
}